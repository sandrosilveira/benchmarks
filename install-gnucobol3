if [ -f /etc/debian_version ]; then
   apt install libgmp-dev
   apt install libdb-dev
   apt install libncurses5-dev libncursesw5-dev
else
   yum install gmp-devel
   yum install libdb-devel
   yum install ncurses-devel
fi
#TODO: Se não existe make no fedora/centos:
#dnf install @development-tools
#TODO: Se não existe make no ubuntu:
#apt install build-essentials
cd ~
mkdir Downloads
cd Downloads
wget http://sourceforge.net/projects/open-cobol/files/gnu-cobol/3.0/gnucobol-3.0-rc1.tar.gz
tar xvf gnucobol-3.0-rc1.tar.gz
rm gnucobol-3.0-rc1.tar.gz
cd gnucobol-3.0-rc1
./configure
make
make install
make test
echo /usr/local/lib>> /etc/ld.so.conf.d/libc.conf
ldconfig
